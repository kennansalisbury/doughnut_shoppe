<h1><%=customer.name%></h1>

<h2>What does <%=customer.name%> like?</h2>

<div class="row">
    <% customer.donuts.forEach(d => {%>
        <div class="col s3">
            <div class="card small">
                <div class="card-image">
                    <img class="responsive-img" src="<%=d.image%>" alt="donut">
                    <span class="card-title"><%= d.name %></span>
                </div>
                <div class="card-content">
                    <p>Description of donut: <%= d.description %></p>    
                </div>
                <div class="card-action">
                    <a href="/donuts/<%=d.id%>">See More</a>
                </div>
            </div>
        </div>
   <% }) %>
</div>