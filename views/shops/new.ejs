<h1>Add a New Shop</h1>

<div class="row">
    <form method="POST" action="/shops" class="col s12"> 
        <div class="row">
            <div class="input-field col s12">
              <input id="name" type="text" class="validate" name="name">
              <label for="name">Name</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
              <input id="specialty" type="text" class="validate" name="specialty">
              <label for="specialty">Specialty</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
              <input id="address" type="text" class="validate" name="address">
              <label for="address">Address</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
              <input id="image" type="url" class="validate" name="image">
              <label for="image">Address</label>
            </div>
        </div>
        <button class="btn waves-effect waves-light #80d8ff light-blue darken-3" type="submit" name="action">Log In
            <i class="material-icons right">send</i>
        </button>
    </form>
</div>